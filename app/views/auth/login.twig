{% extends 'templates/default.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-sm-offset-3 col-sm-9">
      <h2>Please login</h2>
    </div>
  </div>
   <form class="form-horizontal" action="{{ urlFor('auth.login.post') }}" method="post" autocomplete="off">
     <div class="form-group">
        <label class="control-label col-sm-offset-3 col-sm-2" for="identifier">Username: </label>
        <div class="col-sm-5">
          <input class="form-control" type="text" name="identifier" id="identifier">
          <div class="text-danger">
            {% if errors.has('identifier') %} {{ errors.first('identifier') }} {% endif %}
          </div>
        </div>
     </div>
     <div class="form-group">
        <label class="control-label col-sm-offset-3 col-sm-2" for="password">Password: </label>
        <div class="col-sm-5">
          <input class="form-control" type="password" name="password" id="password">
          <div class="text-danger">
            {% if errors.has('password') %} {{ errors.first('password') }} {% endif %}
          </div>
        </div>
     </div>
     <div class="form-group">
       <div class="col-sm-offset-5 col-sm-1">
         <button class="btn btn-primary" type="submit">Login</button>
       </div>
     </div>
     <div class="form-group">
       <div class="col-sm-offset-5 col-sm-5">
         <a href="#">Forgotten your password?</a>
       </div>
     </div>
      <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
   </form>
{% endblock %}
