{% extends 'templates/default.twig' %}

{% block style %}
  .advert {
    min-height: 350px;
  }
{% endblock %}

{% block title %}Home{% endblock %}

{% block content %}

<h1>Buy and Sell Movies</h1>

<hr>

<div class="row">
  {% for advert in adverts if not advert.isSold %}
      <div class="col-sm-3 advert">
        <img class="img-thumbnail" src="{{advert.image_url}}" alt="Image for {{advert.title}}" />
        <div>
          <label>Movie Title:</label>
          <span>{{ advert.title }}</span>
        </div>
        <div>
          <label>Price:</label>
          <span>&pound;{{ advert.price|number_format(2,'.',',') }}</span>
        </div>
      </div>
  {% endfor %}
</div>

{% endblock %}