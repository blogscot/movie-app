{% extends 'templates/default.twig' %}

{% block style %}
  .row {
    margin-left: 0px;
  }
{% endblock %}

{% block title %}Home{% endblock %}

{% block content %}

<h1>Buy and Sell Movies</h1>

<hr>
<div class="homepage">
  <div class="row">
    {# show sold and unsold movies #}
    {% if adverts|length == 0 %}
    <p class="well text-center text-info"> We appear to be sold out! </p>
    {% endif %}
  </div>
  <div class="row">
    {% for advert in adverts %}
    <img class="img-thumbnail" src="{{advert.image_url}}" alt="Image for {{advert.title}}" />
    {% endfor %}
  </div>
</div>

{% endblock %}