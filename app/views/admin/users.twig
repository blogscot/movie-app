{% extends 'templates/default.twig' %}

{% block title %}View Users{% endblock %}

{% block content %}

  <h2>View Users</h2>

  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th> ID </th>
        <th> Username </th>
        <th> Firstname </th>
        <th> Surname </th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td> {{user.id}} </td>
        <td> {{user.username}} </td>
        <td> {{user.firstname}} </td>
        <td> {{user.surname}} </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}