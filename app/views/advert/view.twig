{% extends 'templates/default.twig' %}

{% block title %}Movie Details{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-sm-offset-2 col-sm-4">
      <h2>Movie Details</h2>
    </div>
  </div>

  <form class="form-horizontal" action="{{ urlFor('advert.view.post', {id: advert.id}) }}" method="post" autocomplete="off">
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1">Title: </label>
       <div class="col-sm-5">
         <input class="form-control" type="text" value='{{ advert.title }}' readonly>
       </div>
    </div>
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1">Seller: </label>
       <div class="col-sm-2">
         <input class="form-control" type="text" value="{{ auth.getUsernameById(advert.seller_id)|capitalize }}" readonly></input>
       </div>
    </div>
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1">Price: </label>
       <div class="col-sm-2">
         <input class="form-control" type="number" value="{{ advert.price|number_format(2,'.',',') }}" readonly>
       </div>
    </div>
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1">Movie:</label>
       <div class="col-sm-5">
         <img class="img-thumbnail" src="{{ advert.image_url }}" alt="Advert Image">
       </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-offset-2 col-sm-2">Category: </label>
      <div class="col-sm-2">
        <select class="form-control" class="default_category" readonly>
          <option selected>{{ advert.category }}</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-offset-2 col-sm-2">Description: </label>
      <div class="col-sm-5">
        <textarea class="form-control" readonly rows="8" cols="40">{{ advert.description }}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-6">
        <button class="btn btn-primary" type="submit">Buy</button>
        <a class="back-btn" href="{{ urlFor('advert.viewall')}}"><button
          class="btn btn-primary" type="button">Back</button></a>
      </div>
    </div>
   <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
</form>

{% endblock %}