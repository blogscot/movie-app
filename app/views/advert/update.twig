{% extends 'templates/default.twig' %}

{% block title %}Update Advert{% endblock %}

{% block style %}
  img {
    width: 250px;
  }
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-sm-offset-3 col-sm-9">
      <h2>Update Advert</h2>
    </div>
  </div>
  <form class="form-horizontal" action="{{ urlFor('advert.update.post', {id: advert.id}) }}"
  method="post" enctype="multipart/form-data" autocomplete="off">
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1" for="title">Title: </label>
       <div class="col-sm-6">
         <input class="form-control" type="text" name="title" id="title"
         value='{{ advert.title }}'>
         {% if errors.has('title') %} {{ errors.first('title') }} {% endif %}
       </div>
    </div>
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1" for="price">Price: </label>
       <div class="col-sm-6">
         <input class="form-control" type="number" step="0.01" name="price" id="price"
         value="{{ advert.price|number_format(2,'.',',') }}">
         {% if errors.has('price') %} {{ errors.first('price') }} {% endif %}
       </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-offset-3 col-sm-1" for="fileToUpload">Image: </label>
      <div class="col-sm-6">
        <input type="file" name="fileToUpload" id="fileToUpload"
        {% if request.post('fileToUpload') %} value="{{ request.post('fileToUpload') }}" {% endif %}>
        <div class="user-warning col-sm-6">
          {% if errors.has('fileToUpload') %} {{ errors.first('fileToUpload') }} {% endif %}
        </div>
      </div>
   </div>
    <div class="form-group">
       <label class="control-label col-sm-offset-3 col-sm-1" for="image_url">Image:</label>
       <div class="col-sm-6">
         <img src="{{ advert.image_url }}" alt="Advert Image">
       </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-offset-3 col-sm-1" for="title">Category: </label>
      <div class="col-sm-6">
        <select class="form-control" class="default_category" name="category">
          <option value="Action" {% if advert.category == 'Action' %} selected {% endif %}>Action</option>
          <option value="Comedy" {% if advert.category == 'Comedy' %} selected {% endif %}>Comedy</option>
          <option value="Crime" {% if advert.category == 'Crime' %} selected {% endif %}>Crime</option>
          <option value="Drama" {% if advert.category == 'Drama' %} selected {% endif %}>Drama</option>
          <option value="Documentary" {% if advert.category == 'Documentary' %} selected {% endif %}>Documentary</option>
          <option value="Family" {% if advert.category == 'Family' %} selected {% endif %}>Family</option>
          <option value="Horror" {% if advert.category == 'Horror' %} selected {% endif %}>Horror</option>
          <option value="Romance" {% if advert.category == 'Romance' %} selected {% endif %}>Romance</option>
          <option value="Scifi" {% if advert.category == 'Scifi' %} selected {% endif %}>SciFi</option>
          <option value="Thriller" {% if advert.category == 'Thriller' %} selected {% endif %}>Thriller</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-offset-3 col-sm-1" for="title">Description: </label>
      <div class="col-sm-6">
        <textarea class="form-control" name="description" rows="8" cols="40">{{ advert.description }}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-1">
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </div>
   <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
 </form>
{% endblock %}