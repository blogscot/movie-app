{% extends 'templates/default.twig' %}

{% block title %}My Transactions{% endblock %}

{% block content %}
  <h2>My Transactions</h2>

  {% if purchases is empty %}
    <p class="well text-danger text-center">You have no purchases. So sad!</p>
  {% endif %}

  {% for purchase in purchases %}

  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th> Date </th>
        <th> Seller </th>
        <th> Title </th>
        <th> Price </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> {{ purchase.updated_at|date("d/m/Y") }} </td>
        <td> {{ auth.getUsernameById(purchase.seller_id) }} </td>
        <td> {{ purchase.title }}</td>
        <td> &pound{{ purchase.price|number_format(2,'.',',') }} </td>
      </tr>
    </tbody>
  </table>

  {% endfor %}

  <a href="{{urlFor('user.profile')}}"> <button class="btn btn-primary" type="button" name="button">Back</button> </a>
{% endblock %}