{% extends 'templates/default.twig' %}

{% block title %}My Transactions{% endblock %}

{% block content %}
  <h2>My Transactions</h2>

  {% if transactions is empty %}
    <p class="well text-danger text-center">You have no transactions. So sad!</p>
  {% else %}
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th> Date </th>
          <th> Reason </th>
          <th> By </th>
          <th> Seller </th>
          <th> Note </th>
          <th> Amount </th>
          <th> Balance </th>
        </tr>
      </thead>
      <tbody>
        {% for transaction in transactions %}
        <tr>
          <td> {{ transaction.updated_at|date("d/m/Y") }} </td>
          <td> {{ transaction.reason }} </td>
          <td>
            {% if transaction.buyer_id %}
            {{ auth.getUsernameById(transaction.buyer_id)|capitalize }}
            {% endif %}
          </td>
          <td>
            {% if transaction.seller_id %}
            {{ auth.getUsernameById(transaction.seller_id)|capitalize }}
            {% endif %}
          </td>
          <td> {{ transaction.title }}</td>
          <td> &pound;{{ transaction.amount|number_format(2,'.',',') }} </td>
          <td> &pound;{{ transaction.balance|number_format(2,'.',',') }} </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}

  <a href="{{urlFor('user.profile')}}"> <button class="btn btn-primary" type="button" name="button">Back</button> </a>
{% endblock %}