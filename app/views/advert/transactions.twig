{% extends 'templates/default.twig' %}

{% block title %}My Transactions{% endblock %}

{% block content %}
  <h2>My Transactions</h2>

  {% if transactions is empty %}
    <p class="well text-danger text-center">You have no transactions. So sad!</p>
  {% endif %}


  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th> Date </th>
        <th> Seller </th>
        <th> Title </th>
        <th> Price </th>
      </tr>
    </thead>
    <tbody>
      {% for transaction in transactions %}
      <tr>
        <td> {{ transaction.updated_at|date("d/m/Y") }} </td>
        <td> {{ auth.getUsernameById(transaction.seller_id) }} </td>
        <td> {{ transaction.title }}</td>
        <td> &pound{{ transaction.price|number_format(2,'.',',') }} </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>


  <a href="{{urlFor('user.profile')}}"> <button class="btn btn-primary" type="button" name="button">Back</button> </a>
{% endblock %}