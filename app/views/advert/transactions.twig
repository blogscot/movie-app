{% extends 'templates/default.twig' %}

{% block style %}
  th, td {
    text-align: center;
  }
{% endblock %}

{% block title %}My Transactions{% endblock %}

{% block content %}
  <h2>My Transactions</h2>

  {% if transactions is empty %}
    <p class="well text-danger text-center">You have no transactions. So sad!</p>
  {% else %}
    {% include 'templates/partials/_transactions.twig' %}
  {% endif %}

  <a href="{{urlFor('user.profile')}}"> <button class="btn btn-primary" type="button" name="button">Back</button> </a>
{% endblock %}