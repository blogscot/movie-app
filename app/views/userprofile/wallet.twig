{% extends 'templates/default.twig' %}

{% block title %}User Wallet{% endblock %}

{% block content %}
  <h2>Current Balance</h2>
  <p>
    Your current balance is: &pound;{{ wallet.balance }}
  </p>
  <hr/>
  <form class="default_form" action="{{ urlFor('user.deposit.post')}}" method="post" autocomplete="off">
  <ul>
    <li>
      <label for="funds">Deposit Funds: </label>
      <input type="number" step="0.01" name="funds" id="funds">
      <button class="btn btn-primary" type="submit">+</button>
    </li>
    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
  </ul>
  </form>

  <form class="default_form" action="{{ urlFor('user.withdraw.post')}}" method="post" autocomplete="off">
  <ul>
    <li>
      <label for="funds">Withdraw Funds: </label>
      <input type="number" step="0.01" name="funds" id="funds">
      <button class="btn btn-primary" type="submit">-</button>
    </li>
    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
  </ul>
  </form>
{% endblock %}